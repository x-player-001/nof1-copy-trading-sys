# Nof1 API Configuration
# 用于获取AI Agent的交易信号
NOF1_API_BASE_URL=https://nof1.ai/api

# ============================================================================
# 交易所配置 (Exchange Configuration)
# ============================================================================

# 选择交易所类型 (binance 或 hyperliquid)
EXCHANGE_TYPE=binance

# 是否使用测试网环境（推荐新手先使用测试网）
# true = 测试网（虚拟资金，无风险）
# false = 正式网（真实资金，有风险）
EXCHANGE_TESTNET=true

# ----------------------------------------------------------------------------
# Binance API Configuration
# ----------------------------------------------------------------------------
# ⚠️ 重要：必须启用合约交易权限 (Enable Futures)
# 获取方式：https://www.binance.com/en/my/settings/api-management
# 测试网：https://testnet.binancefuture.com/

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# 兼容旧版本配置
BINANCE_TESTNET=true

# ----------------------------------------------------------------------------
# Hyperliquid API Configuration
# ----------------------------------------------------------------------------
# ⚠️ 重要：Hyperliquid 使用以太坊私钥进行签名
# 获取方式：https://app.hyperliquid.xyz/
# 测试网：https://app.hyperliquid-testnet.xyz/
#
# 私钥格式：64位16进制字符串（不含0x前缀）
# 示例：1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
#
# ⚠️ 安全警告：
# 1. 不要在代码中硬编码私钥
# 2. 建议使用专门的交易账户
# 3. 定期更换私钥
# 4. 使用 .gitignore 确保 .env 文件不被提交到 git

HYPERLIQUID_PRIVATE_KEY=your_ethereum_private_key_here

# Hyperliquid Vault 地址（可选，用于通过 Vault 交易）
HYPERLIQUID_VAULT_ADDRESS=

# Trading Configuration
# 最大仓位大小（USDT）
MAX_POSITION_SIZE=1000

# 默认杠杆倍数（建议≤20x）
DEFAULT_LEVERAGE=10

# 风险百分比（账户总资金的百分比）
RISK_PERCENTAGE=2.0

# Logging Configuration
# 日志级别: ERROR, WARN, INFO (默认), DEBUG, VERBOSE
# INFO - 只显示重要操作(推荐日常使用)
# DEBUG - 显示详细调试信息
# VERBOSE - 显示所有日志(仅用于深度调试)
LOG_LEVEL=INFO

# Telegram Bot Configuration
# 可选，用于接收交易通知
# 获取方式：https://core.telegram.org/bots#6-botfather
TELEGRAM_API_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=false